{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/pay",
      "dest": "/api/pay.js"
    },
    {
      "src": "/api/check-status",
      "dest": "/api/check-status.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}